{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["entrypoints/**/*", "components/**/*", "hooks/**/*", "utils/**/*", "types/**/*", "config/**/*", "context/**/*", "styles/**/*", "wxt.config.ts"],
  "exclude": ["node_modules"]
}
